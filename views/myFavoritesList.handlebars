<htm>
	<head>
		<script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>
			
		<style>
		    .article{
				position: relative;
				height: 100px;
				width: 600px;
				background-color: yellow;
				cursor: pointer;
				border: 1px solid grey;
				margin: 3px;
				z-index: 10;
			}		
		</style>
	</head>
	<body>

        {{#each artFav}}

		    <div class="article" author="{{ user.username }}" date="{{ created }}" content="{{ content }}" title="{{ title }}">
		    	TÃ­tulo: {{ title }}<br>
		    	Autor: {{ user.username }}<br>
		    	Fecha: {{ created }}<br>
		    	<div class="com_esc">
		    		{{#each comments}}
		                <br>__________<br>
				        {{ info }}
		            {{/each}}
		    	</div>
		    	{{created}}{{../user}}
		    	<form action="/removeFromMyFavorites" method="get" class="formFav">
		        	<input type="hidden" name="_csrf" value="{{_csrfToken}}">
		        	<input type="hidden" name="article_date" value="{{created}}">
		        	<input type="hidden" name="article_user" value="{{../user}}">
				    <div>
		                <input type="submit" value="BORRAR viaje de favoritos"/>
		            </div>
				</form>
		    </div>

        {{/each}}
  

        <script type='text/javascript'>
        
		    function initialize() {

              var latitud = $('#map_canvas').attr('latitud');
              var longitud = $('#map_canvas').attr('longitud');

		      var myLatlng = new google.maps.LatLng(latitud, longitud);
		      var myOptions = {
		        zoom: 8,
		        center: myLatlng,
		        mapTypeId: google.maps.MapTypeId.ROADMAP
		      }
		      var map = new google.maps.Map(document.getElementById("map_canvas"), myOptions);

		      var pos = new google.maps.LatLng(latitud, longitud);
		   	  var marker = new google.maps.Marker({
				position: pos,
				map: map,
		      });
		    }
    

		    function loadScript() {
		      var script = document.createElement("script");
		      script.type = "text/javascript";
		      script.src = "http://maps.google.com/maps/api/js?sensor=false&callback=initialize";
		      document.body.appendChild(script);
		    }

		    $('#botonViaje').on('click', function(){
		      loadScript()
		    })
	   
		</script>


	</body>
</html>









