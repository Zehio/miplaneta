<htm>
	<head>
		<script src="http://ajax.aspnetcdn.com/ajax/jquery/jquery-1.9.0.js"></script>
		<script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handlebars.min.js"></script>
			
		<style>
		    .user{
				position: relative;
				height: 100px;
				width: 600px;
				background-color: yellow;
				cursor: pointer;
				border: 1px solid grey;
				margin: 3px;
				z-index: 10;
			}		
		</style>
	</head>
	<body>

        {{#each user.favoriteUsers}}

		    <div class="user">
		    	Nombre: {{ username }}<br>
		    	Creado: {{ created }}
                <form action="/removeFromMyFavoritesUsers" method="get" class="formFav">
		        	<input type="hidden" name="_csrf" value="{{_csrfToken}}">
		        	<input type="hidden" name="user_date" value="{{created}}">
		        	<input type="hidden" name="user_name" value="{{username}}">
				    <div>
		                <input type="submit" value="BORRAR usuario de favoritos"/>
		            </div>
				</form>
		    </div>

        {{/each}}

	</body>
</html>



